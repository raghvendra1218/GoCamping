<% include ../partials/header %>
<div class ="container">
    <div class ="row">
        <h1 style="text-align:center">Create a new Campground</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="input" name ="newcamp" placeholder="new camp" required="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="input" name ="image" placeholder="new camp image" required="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name ="price" placeholder="pricein USD" min="0.01" step="0.01" required="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="input" name ="description" placeholder="Describe it!" required="required">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add Camp</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>