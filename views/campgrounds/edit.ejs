<% include ../partials/header %>
<div class ="container">
    <div class ="row">
        <h1 style="text-align:center">Edit <%=foundCampground.name %></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds/<%=foundCampground._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name ="campground[name]" value="<%=foundCampground.name%>" required ="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name ="campground[image]" value="<%=foundCampground.image%>" required ="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name ="campground[price]" value="<%=foundCampground.price%>" min="0.01" step="0.01" required ="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name ="campground[description]" value="<%=foundCampground.description%>" required ="required">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update Camp</button>
                </div>
            </form>
            <a href="/campgrounds/<%=foundCampground._id%>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>